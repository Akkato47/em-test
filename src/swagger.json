{
  "swagger": "2.0",
  "info": {
    "description": "ITUgra OpenAPI docs",
    "version": "1.0.0",
    "title": "ITUgra"
  },
  "host": "localhost:8000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication related endpoints"
    },
    {
      "name": "User",
      "description": "User related endpoints"
    },
    {
      "name": "Requests",
      "description": "Requests related endpoints"
    }
  ],
  "schemes": ["http"],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "description": "Creates a new user and returns authentication tokens.",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "description": "User registration data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateUserDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User registered successfully",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "message": {
                  "$ref": "#/definitions/LoginRegistrationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log in an existing user",
        "description": "Authenticates a user and returns authentication tokens.",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "description": "User login data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LoginUserDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "message": {
                  "$ref": "#/definitions/LoginRegistrationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Log out the current user",
        "description": "Logs out the user and clears authentication tokens.",
        "security": [
          {
            "api_key": []
          }
        ],
        "responses": {
          "200": {
            "description": "User logged out successfully",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "message": {
                  "type": "null"
                }
              }
            }
          },
          "500": {
            "description": "Something went wrong"
          }
        }
      }
    },
    "/requests/list/{filter}/{start}/{end}": {
      "get": {
        "tags": ["Requests"],
        "summary": "Get Requests data",
        "parameters": [
          {
            "name": "filter",
            "in": "path",
            "required": true,
            "type": "string",
            "enum": ["All", "Canceled", "Completed", "In progress", "New"]
          },
          {
            "name": "start",
            "in": "path",
            "required": true,
            "type": "number"
          },
          {
            "name": "end",
            "in": "path",
            "required": true,
            "type": "number"
          },
          {
            "name": "from",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "yyyy-mm-ddThh:mm:ss"
          },
          {
            "name": "to",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "yyyy-mm-ddThh:mm:ss"
          }
        ],
        "security": [{ "api_key": [] }],
        "responses": {
          "200": {
            "description": "Requests data",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "payload": {
                  "$ref": "#/definitions/GetRequestsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/requests/resp/{requestUid}": {
      "get": {
        "tags": ["Requests"],
        "summary": "Get Responses data",
        "parameters": [
          {
            "name": "requestUid",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "security": [{ "api_key": [] }],
        "responses": {
          "200": {
            "description": "Response data",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "payload": {
                  "$ref": "#/definitions/GetResponseResponse"
                }
              }
            }
          }
        }
      }
    },
    "/requests": {
      "post": {
        "tags": ["Requests"],
        "summary": "Create Request",
        "security": [{ "api_key": [] }],
        "parameters": [
          {
            "in": "body",
            "name": "list",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateRequestDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "payload": {
                  "type": "string",
                  "example": "Success"
                }
              }
            }
          }
        }
      }
    },
    "/requests/resp": {
      "post": {
        "tags": ["Requests"],
        "summary": "Create Response",
        "parameters": [
          {
            "in": "body",
            "name": "list",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateResponseDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "payload": {
                  "type": "string",
                  "example": "Success"
                }
              }
            }
          }
        }
      }
    },
    "/requests/cancel-all": {
      "post": {
        "tags": ["Requests"],
        "summary": "Cancel all requests in progress",
        "parameters": [
          {
            "in": "body",
            "name": "list",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CancelAllRequestsDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Canceled successfully",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "payload": {
                  "type": "string",
                  "example": "Success"
                }
              }
            }
          }
        }
      }
    },
    "/requests/take/{requestUid}": {
      "patch": {
        "tags": ["Requests"],
        "summary": "Take Request on work",
        "security": [{ "api_key": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "requestUid",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Updated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number"
                },
                "payload": {
                  "type": "string",
                  "example": "Success"
                }
              }
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "LoginRegistrationResponse": {
      "type": "object",
      "properties": {
        "role": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "uid": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "fileUrl": {
              "type": "string"
            }
          }
        }
      }
    },
    "CreateUserDto": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "secondName": {
          "type": "string"
        },
        "mail": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["org", "user"]
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["fullName", "mail", "role", "birthDate", "password"]
    },
    "LoginUserDto": {
      "type": "object",
      "properties": {
        "mail": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["password"]
    },
    "CreateRequestDto": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "contactMail": {
          "type": "string"
        }
      }
    },
    "CreateResponseDto": {
      "type": "object",
      "properties": {
        "requestUid": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "cancel": {
          "type": "boolean"
        }
      }
    },
    "CancelAllRequestsDto": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        }
      }
    },
    "GetRequestsResponse": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["Canceled", "Completed", "In progress", "New"]
        },
        "contactMail": {
          "type": "string"
        },
        "responsible": {
          "type": "object",
          "properties": {
            "uid": { "type": "string" },
            "mail": { "type": "string" }
          }
        }
      }
    },
    "GetResponseResponse": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        },
        "author": {
          "type": "object",
          "properties": {
            "uid": { "type": "string" },
            "mail": { "type": "string" }
          }
        }
      }
    }
  }
}
